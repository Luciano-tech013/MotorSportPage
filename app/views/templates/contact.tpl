{include file="layout/header.tpl"}

<section>
    <h1 class="text-center shadow p-3 mb-5 bg-body rounded">{$tittle}</h1>
    <section class="section__contact">
        <article class="section__contact__card">
            <header>
                <img src="/public/assets/instagram_icon.png" alt="instagram icon" class="card-img-top">
                <h5 class="card-title">Instagram</h5>
            </header>
            <a href="https://www.instagram.com" class="btn btn-primary" target="_blank">Ver Perfil</a>
        </article>
        <article class="section__contact__card">
            <header>
                <img src="/public/assets/facebook_icon.png" alt="facebook icon" class="card-img-top">
                <h5 class="card-title">Facebook</h5>
            </header>
            <a href="https://www.facebook.com" class="btn btn-primary" target="_blank">Ver Perfil</a>
        </article>
        <article class="section__contact__card">
            <header>
                <img src="/public/assets/whatsapp_icon.png" alt="whatsapp icon" class="card-img-top">
                <h5 class="card-title">Whatsapp</h5>
            </header>
            <a href="https://www.whatsapp.com" class="btn btn-primary" target="_blank">Ver Perfil</a>
        </article>
    </section>
</section>

